        //Function to get GTM to Nepali Time
        function getNepaliTimeNow(datetime) {

            if (datetime == null) {
                return null;

            } else {
                var time = new Date(datetime);
                var time_in_nepal = time.toLocaleString("en-US", {
                    timeZone: "Asia/Kathmandu",
                    hour12: false
                });
                return time_in_nepal;

            }
        }

